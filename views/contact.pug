extends base.pug

block scripts 
    scripts(src='/static/index.js')

block style 
    style 
        include ../static/style.css
        include ../static/stylecontact.css


block content 
    nav#navbar 
        ul 
            li #[a(href="/") Home] 
            li #[a(href="/") About] 
            li #[a(href="/") services] 
            li #[a(href="/") Class Info] 
            li #[a(href="/contact") Contact US]
    
    h1 Contact Us 
    form(action="/contact" method="post", Class="myform")
        input(type="text",Class="myInput",name="name",placeholder="Enter your name")
        input(type="phone",Class="myInput",name="phone",placeholder="Enter your phone")
        input(type="email",Class="myInput",name="email",placeholder="Enter your email")
        input(type="text",Class="myInput",name="address",placeholder="Enter your address")
        input(type="text",Class="myInput",name="desc",placeholder="Enter your desc")
        button(Class="btn") 
            | submit
